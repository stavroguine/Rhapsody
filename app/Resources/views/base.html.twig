<!-- app/Resources/views/base.html.twig -->
<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html"; charset="utf-8" />
        <title>{% block title %}Rhapsody{% endblock %}</title>
        <!--[if lt IE 9]>
            <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        {% block stylesheets %}
            <link href='http://fonts.googleapis.com/css?family=Irish+Grover' rel='stylesheet' type='text/css'>
            <link href='http://fonts.googleapis.com/css?family=La+Belle+Aurore' rel='stylesheet' type='text/css'>
            <link href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' rel='stylesheet' type='text/css'>
            <link href="{{ asset('styles/screen.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
{% set locale = path(app.request.get('_route'), {'_locale': app.request.attributes.get('_locale') }) %}
{{ dump(locale) }}
        <section id="wrapper">
            <header id="header">


                <hgroup>
                    <h2>{% block blog_title %}<a href="{{ path('BlogBundle_homepage') }}">Rhapsody</a>{% endblock %}</h2>
                    <h3>{% block blog_tagline %}<a href="#">{% trans %}site.devise{% endtrans %}</a>{% endblock %}</h3>
                </hgroup>
                <div class="top">
                    {% block navigation %}
                        <nav>
                            <ul class="navigation">
                                <li><a href="{{ path('BlogBundle_homepage') }}">{% trans %}site.home{% endtrans %}</a></li>
                                <li><a href="{{ path('BlogBundle_about') }}">{% trans %}site.about{% endtrans %}</a></li>
                                <li><a href="{{ path('BlogBundle_contact') }}">{% trans %}site.contact{% endtrans %}</a></li>
                                <li><a href="/fr">fr</a></li>
                                <li><a href="/en">en</a></li>
                            </ul>
                        </nav>
                    {% endblock %}
                </div>
            </header>

            <section class="main-col">
                {% block body %}{% endblock %}
            </section>
            <aside class="sidebar">
                {% block sidebar %}{% endblock %}
            </aside>

            <div id="footer">
                {% block footer %}
                    Symfony3 blog project
                {% endblock %}
            </div>
        </section>
        {% block javascripts %}
                    <script src="https://code.jquery.com/jquery-3.2.1.min.js" type='text/javascript'></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

        {% endblock %}
    </body>
</html>
